<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="ordersTable"
        messagesPack="com.company.pizzaplace.web.screens.order">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="com.company.pizzaplace.entity.Order"
                    view="order-view">
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from pizzaplace_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ordersTable"
            spacing="true">
        <filter id="filter"
                applyTo="ordersTable"
                dataLoader="ordersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ordersTable"
                    width="100%"
                    dataContainer="ordersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="customer"/>
                <column id="name"/>
                <column id="address"/>
                <column id="telephoneNumber"/>
                <column id="finalAmount"/>
                <column id="orderTime"/>
                <column id="isDelivered"/>
                <column id="deliveryTime"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ordersTable.create"/>
                <button id="editBtn" action="ordersTable.edit"/>
                <button id="removeBtn" action="ordersTable.remove"/>
                <button id="deliveryBtn" caption="Deliver!"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
